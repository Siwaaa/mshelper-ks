.se_6 {
  position: relative;
  &__content {
    padding-left: 10%;
    padding-top: 11%;

    & > .title-h3 {
      margin-bottom: 25px;
    }
  }

  &__info {
    position: relative;
    line-height: 1.3;

    max-width: 588px;
    &::before {
      content: '';
      position: absolute;
      left: -24px;
      display: inline-block;
      width: 6px;
      height: 102%;
      background: var(--color-gradient);
      transform: rotate(180deg);
    }

    /* сделать добавление точек классом */
    & > li {
      list-style-type: disc;
      list-style-position: outside;
      margin-bottom: 30px;
      margin-left: 20px;

      &:last-child {
        margin-bottom: 0;
      }
    }
  }
}