.se_9 {
  &__content {
    padding-right: 32%;
    padding-top: 11%;

    @media (--md) {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: 30px;
      padding-bottom: 30px;
    }

    & > .title-h3 {
      margin-bottom: 25px;
    }
  }

  &__info {
    position: relative;
    line-height: 1.3; 

    max-width: 588px;
    &::before {
      content: '';
      position: absolute;
      left: -24px;
      display: inline-block;
      width: 6px;
      height: 102%;
      background: var(--color-gradient);
      transform: rotate(180deg);

      @media (--md) {
        left: -20px;
      }
    }

    & > h4 {
      font-weight: 700;
      margin-bottom: 20px;
    }

    /* повторяется */
    & > li {
      list-style-type: disc;
      list-style-position: outside;
      margin-bottom: 30px;
      margin-left: 20px;

      &:last-child {
        margin-bottom: 0;
      }
    }
  }
}